{
      "$schema": "https://json.schemastore.org/tsconfig",
      "display": "Node 14",
      "compilerOptions": {
            "allowSyntheticDefaultImports": true,
            "baseUrl": "src",
            "declaration": true,
            "esModuleInterop": true,
            "forceConsistentCasingInFileNames": true,
            "lib": [
                  "es2020"
            ],
            "module": "commonjs",
            "moduleResolution": "node",
            "outDir": "dist",
            "skipLibCheck": true,
            "sourceMap": true,
            "strict": true,
            "target": "es2020"
      }
}